# K-OCR Web Corrector Environment Configuration

# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=Asia/Seoul

# File Upload Settings
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_EXTENSIONS=.pdf
TEMP_STORAGE_PATH=./temp_storage
TEMP_FILE_TTL=86400  # 24 hours in seconds

# OCR Engine Settings
DEFAULT_OCR_ENGINE=paddleocr
ENABLE_TESSERACT=true
ENABLE_PADDLEOCR=true

# PaddleOCR Configuration
PADDLEOCR_USE_ANGLE_CLS=true
PADDLEOCR_LANG=korean
PADDLEOCR_USE_GPU=false  # Set to true if GPU is available

# Tesseract Configuration
TESSERACT_CMD=tesseract
TESSERACT_LANG=kor

# Image Processing Settings
DEFAULT_DPI=300
MAX_IMAGE_SIZE=4096
ENABLE_PREPROCESSING=true

# Text Correction Settings
ENABLE_SPACING_CORRECTION=true
ENABLE_SPELL_CORRECTION=true
ENABLE_CUSTOM_RULES=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# Security Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
TRUSTED_HOSTS=["localhost", "127.0.0.1"]

# Performance Settings
WORKER_PROCESSES=2
WORKER_TIMEOUT=300  # 5 minutes
MAX_CONCURRENT_UPLOADS=10

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=9090

# Cloud API Settings (Optional)
# GOOGLE_CLOUD_VISION_API_KEY=
# NAVER_CLOVA_OCR_SECRET_KEY=
# MICROSOFT_COGNITIVE_SERVICES_KEY=

# Database Settings (if needed for future features)
# DATABASE_URL=sqlite:///./k_ocr.db

# Development Settings
RELOAD=true
ACCESS_LOG=true

# Production Settings (override in production)
# ENVIRONMENT=production
# DEBUG=false
# RELOAD=false
# ACCESS_LOG=false